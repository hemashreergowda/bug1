pipeline {
    agent any
    environment{
        dockerImage =''
        registry = 'hemashree08022001gowda@gmail.com/hema'
        }
    stages {
        stage('create') {
            steps {
               echo "create"
            }
        }
        stage('Build Docker image') {
            steps {
            script{
            dockerImage = docker.build registry
               }
            }
        }
        stage('test') {
            steps {
                sh "python3 app.py"
                echo "test"
            }
        }
     }
 }

